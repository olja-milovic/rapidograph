{
  "name": "rapidograph",
  "private": true,
  "version": "1.0.2",
  "description": "A micro-library for efficient, customizable HTML chart visualization.",
  "keywords": [
    "visualization",
    "chart",
    "graph",
    "metric",
    "tiny",
    "fast",
    "html",
    "webcomponents"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/olja-milovic/rapidograph.git"
  },
  "author": "Olja Milovic <25349543+olja-milovic@users.noreply.github.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig-build.json && vite build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint": "eslint . && prettier . --write",
    "release": "release-it",
    "release:ci": "release-it --ci",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@release-it/keep-a-changelog": "^7.0.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/web-components-vite": "^10.1.11",
    "@types/node": "^24.10.4",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "release-it": "^19.2.2",
    "storybook": "^10.1.11",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  }
}
